
@model His.Models.D00_TBGENERAL

<div class="modal-dialog modal-lg" role="document">
	<div class="modal-content">
		<div class="modal-header">
			<h4 class="modal-title text-center" id="exampleModalLabel">Agregar Tipo</h4>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		@using (Html.BeginForm("AgregarTipo", "Tablas"))
		{
			<div class="modal-body">
			
				<div class="row">
					<div class="col-md-6">


						<div class="form-group">

							<label>Codigo</label>
							@Html.TextBoxFor(m => m.codTab, new { @class = "form-control" })
							<span class="text-danger"></span>
						</div>

						<div class="form-group">

							<label>Descripcion</label>
							@Html.TextBoxFor(m => m.descripcion, new { @class = "form-control" })
						</div>

					</div>


				</div>

				<div class="modal-footer">
					<button style="width: 80px;" type="submit" class="btn btn-primary">Guardar</button>
					<button style="width: 80px;" type="submit" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
		}

	</div>
</div>






